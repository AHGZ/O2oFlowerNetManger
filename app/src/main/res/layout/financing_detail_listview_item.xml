<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/financing_detail_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/financing_detail_icon_dd" />

    <TextView
        android:id="@+id/financing_detail_item_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/financing_detail_item_img"
        android:layout_toRightOf="@+id/financing_detail_item_img"
        android:text="订单号: 201701011234561"
        android:textColor="#444444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/financing_detail_item_total_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/financing_detail_item_order_number"
        android:layout_below="@+id/financing_detail_item_order_number"
        android:layout_marginTop="15dp"
        android:text="订单总额: ¥ 121.00"
        android:textColor="#444444"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/financing_detail_item_the_store_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/financing_detail_item_total_order_amount"
        android:layout_below="@+id/financing_detail_item_total_order_amount"
        android:layout_marginTop="15dp"
        android:text="店铺营收: ¥ 121.00"
        android:textColor="#444444"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/financing_detail_item_finish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/financing_detail_item_the_store_sales"
        android:layout_below="@+id/financing_detail_item_the_store_sales"
        android:layout_marginTop="15dp"
        android:text="完成时间: 2017-01-01 12:12:12"
        android:textColor="#444444"
        android:textSize="13sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/financing_detail_item_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:text="团购"
        android:textColor="#444444"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/financing_detail_item_order_number"
        android:layout_alignBottom="@+id/financing_detail_item_order_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

</RelativeLayout>