<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/financing_gridview_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:src="@drawable/financing_icon_ddze" />

    <TextView
        android:id="@+id/financing_gridview_item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/financing_gridview_item_img"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/financing_gridview_item_img"
        android:text="订单总额"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/financing_gridview_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/financing_gridview_item_text1"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/financing_gridview_item_img"
        android:text="¥ 121212.12"
        android:textColor="#444444" />
</RelativeLayout>