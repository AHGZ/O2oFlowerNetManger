<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/business_lin"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/doBusiness_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="营业时间"
            android:textColor="#444444"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/doBusiness_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doBusiness_time"
            android:layout_marginLeft="15dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp"
            android:text="配送费:5.00"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/business_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="开始时间 >"
            android:textColor="#A2A2A2"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/business_delete_time"
            android:layout_width="59dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="#EEEEEE"
            android:text="删除"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/business_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:text="结束时间 >"
            android:textColor="#A2A2A2"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>