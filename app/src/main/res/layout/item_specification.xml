<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <LinearLayout
            android:id="@+id/dgg_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1.1"
                android:text="麻辣口味"
                android:textColor="#4b4b4b"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_weight="1.1"
                android:text="库存：20"
                android:textColor="#4b4b4b"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dgg_linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dgg_linear1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/tv_rl_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_weight="1.5"
                android:text="让利价：¥20.00"
                android:textColor="#4b4b4b"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_kc_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_weight="1.5"
                android:text="库存：¥20.00"
                android:textColor="#4b4b4b"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dgg_linear2"
            android:layout_marginTop="8dp"
            android:background="#e8e8e8" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:src="@drawable/icon_delete" />

</LinearLayout>