<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_management_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="2017-11-29 18:08"
        android:textColor="#A2A2A2"
        android:textSize="13sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/item_message_bg">

        <LinearLayout
            android:id="@+id/message_management_item_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_management_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:src="@drawable/message_icon_new" />

            <TextView
                android:id="@+id/message_management_item_title"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/message_management_item_img"
                android:gravity="center_vertical"
                android:textColor="#4b4b4b"
                android:textSize="15sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/message_management_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_management_item_linear"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="22dp"
            android:textColor="#777777"
            android:textSize="13sp"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>