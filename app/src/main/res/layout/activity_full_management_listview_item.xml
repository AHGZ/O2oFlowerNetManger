<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/full_management_item_text"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="满20返10元"
        android:textColor="#444444"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/full_management_item_compile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/shopunit_icon_compile" />

    <View
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#E4E4E4" />

    <ImageView
        android:id="@+id/full_management_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="14dp"
        android:src="@drawable/shopunit_icon_delete" />
</LinearLayout>