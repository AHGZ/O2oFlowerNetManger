<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:padding="15dp">


    <com.huafan.huafano2omanger.view.customer.ElastticityScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_hint_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_sp_1"
                android:drawablePadding="10dp"
                android:text="商品"
                android:textColor="#444444"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">


                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="110dp"
                    android:layout_height="97dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/good_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="新品双人套餐"
                            android:textColor="#494949"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/good_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="x3"
                            android:textColor="#A2A2A2"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/good_price"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="¥99"
                        android:textColor="#FF1E00"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="餐盒费"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/container_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text=""
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="配送费"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/postage_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text=""
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|right">


                    <TextView
                        android:id="@+id/tv_123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本单预估收入："
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_estimate_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_123"
                        android:text="￥28.00"
                        android:textColor="#FF1E00"
                        android:textSize="18dp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_ddbz"
                        android:drawablePadding="15dp"
                        android:text="订单备注"
                        android:textColor="#444444"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_ddbz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="2人用餐；多放辣，死命的给我多放辣！！！"
                        android:textColor="#444444"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="发票信息:"
                            android:textColor="#444444"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_invoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="不开发票"
                            android:textColor="#444444"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_refund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icon_tkbz"
                            android:drawablePadding="15dp"
                            android:text="退款备注"
                            android:textColor="#444444"
                            android:textSize="14sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="#e8e8e8" />


                        <TextView
                            android:id="@+id/tv_refund_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户取消订单，取消备注：时间太长"
                            android:textColor="#444444"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_distribution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icon_psxx"
                            android:drawablePadding="15dp"
                            android:text="配送信息"
                            android:textColor="#444444"
                            android:textSize="14sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="#e8e8e8" />


                        <TextView
                            android:id="@+id/tv_distribution_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="骑手：张三 138569956641"
                            android:textColor="#444444"
                            android:textSize="13sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icon_ddxx"
                            android:drawablePadding="15dp"
                            android:text="订单信息"
                            android:textColor="#444444"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="订单号码："
                                android:textColor="#444444"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="21458741"
                                android:textColor="#444444"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="下单时间:"
                                android:textColor="#444444"
                                android:textSize="13sp" />


                            <TextView
                                android:id="@+id/tv_order_create"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="2018-01-24 17:18"
                                android:textColor="#444444"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="支付方式:"
                                android:textColor="#444444"
                                android:textSize="13sp" />


                            <TextView
                                android:id="@+id/tv_pay_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="支付宝"
                                android:textColor="#444444"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_btn_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/tv_left_button"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:background="@drawable/take_out_selector"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="拒绝退款"
                        android:textColor="@drawable/take_out_color_selector"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/tv_right_button"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/wait_refund_selector"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="同意退款"
                        android:textColor="@drawable/take_out_color_selector"
                        android:textSize="12sp"
                        android:visibility="visible" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.huafan.huafano2omanger.view.customer.ElastticityScrollView>

</LinearLayout>